<Window x:Class="UI_inventory.AddProductWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UI_inventory"
        mc:Ignorable="d"
        Title="AddProductWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <Label Content="상품 추가" Grid.Row="0" Name="LbAdd" Height="50" VerticalAlignment="Bottom" HorizontalAlignment="Center" FontSize="24"/>
        <Label Content="상품명: " Grid.Row="1" Name="LbName" Margin="0,10,731,145" FontSize="16"/>
        <TextBox x:Name="TxtName" Grid.Row="1" Margin="64,13,115,147"/>
        <Label Content="가격: " Grid.Row="1" x:Name="LbPrice" Margin="0,49,731,106" FontSize="16"/>
        <TextBox x:Name="TxtPrice" Grid.Row="1" Margin="64,52,115,108"/>
        <Label Content="재고: " Grid.Row="1" x:Name="Lbinven" Margin="0,86,731,69" FontSize="16"/>
        <TextBox x:Name="Txtinven" Grid.Row="1" Margin="64,89,115,71"/>
        <Button x:Name="BtnCheck" Content="확인" HorizontalAlignment="Left" Margin="672,143,0,0" Grid.Row="1" VerticalAlignment="Top" FontSize="20" Click="BtnCheck_Click"/>
        <Button x:Name="BtnCancel" Content="취소" HorizontalAlignment="Left" Margin="721,143,0,0" Grid.Row="1" VerticalAlignment="Top" FontSize="20" Click="BtnCancel_Click"/>
    </Grid>
</Window>
